{
  "manifest_version": 3,
  "name": "Text Selection Popup",
  "version": "1.0",
  "permissions": ["activeTab", "contextMenus", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}