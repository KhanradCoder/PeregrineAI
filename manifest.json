{
  "manifest_version": 3,
  "name": "Peregrine AI",
  "version": "0.1",
  "permissions": ["activeTab", "contextMenus", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}